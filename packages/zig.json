{
  "$schema": "../package.schema.json",
  "name": "zig",
  "description": "General-purpose programming language and toolchain for maintaining robust, optimal, and reusable software.",
  "homepage": "https://ziglang.org",
  "version": "0.15.2",
  "sha256": {
    "linux-arm64": "958ed7d1e00d0ea76590d27666efbf7a932281b3d7ba0c6b01b0ff26498f667f",
    "linux-x64": "02aa270f183da276e5b5920b1dac44a63f1a49e55050ebde3aecc9eb82f93239",
    "macos-arm64": "3cc2bab367e185cdfb27501c4b30b1b0653c28d9f73df8dc91488e66ece5fa6b",
    "macos-x64": "375b6909fc1495d16fc2c7db9538f707456bfc3373b14ee83fdd3e22b3d43f7f"
  },
  "url": {
    "linux-arm64": "https://ziglang.org/download/{{ version }}/zig-aarch64-linux-{{ version }}.tar.xz",
    "linux-x64": "https://ziglang.org/download/{{ version }}/zig-x86_64-linux-{{ version }}.tar.xz",
    "macos-arm64": "https://ziglang.org/download/{{ version }}/zig-aarch64-macos-{{ version }}.tar.xz",
    "macos-x64": "https://ziglang.org/download/{{ version }}/zig-x86_64-macos-{{ version }}.tar.xz"
  },
  "scripts": {
    "install": {
      "linux-arm64": [
        "tar -xf zig-aarch64-linux-{{ version }}.tar.xz",
        "mv zig-aarch64-linux-{{ version }} {{ pkg.opt_dir }}/zig",
        "ln -sf {{ pkg.opt_dir }}/zig/zig {{ pkg.bin_dir }}"
      ],
      "linux-x64": [
        "tar -xf zig-x86_64-linux-{{ version }}.tar.xz",
        "mv zig-x86_64-linux-{{ version }} {{ pkg.opt_dir }}/zig",
        "ln -sf {{ pkg.opt_dir }}/zig/zig {{ pkg.bin_dir }}"
      ],
      "macos-arm64": [
        "tar -xf zig-aarch64-macos-{{ version }}.tar.xz",
        "mv zig-aarch64-macos-{{ version }} {{ pkg.opt_dir }}/zig",
        "ln -sf {{ pkg.opt_dir }}/zig/zig {{ pkg.bin_dir }}"
      ],
      "macos-x64": [
        "tar -xf zig-x86_64-macos-{{ version }}.tar.xz",
        "mv zig-x86_64-macos-{{ version }} {{ pkg.opt_dir }}/zig",
        "ln -sf {{ pkg.opt_dir }}/zig/zig {{ pkg.bin_dir }}"
      ]
    },
    "latest": [
      "curl -fsSL 'https://ziglang.org/download/index.json' | jq -r 'keys_unsorted[1]'"
    ],
    "completions": {
      "linux-arm64": [
        "curl -fsSL https://github.com/ziglang/shell-completions/raw/refs/heads/master/_zig -o {{ pkg.completions.zsh }}/_zig"
      ],
      "linux-x64": [
        "curl -fsSL https://github.com/ziglang/shell-completions/raw/refs/heads/master/_zig -o {{ pkg.completions.zsh }}/_zig"
      ],
      "macos-arm64": [
        "curl -fsSL https://github.com/ziglang/shell-completions/raw/refs/heads/master/_zig -o {{ pkg.completions.zsh }}/_zig"
      ],
      "macos-x64": [
        "curl -fsSL https://github.com/ziglang/shell-completions/raw/refs/heads/master/_zig -o {{ pkg.completions.zsh }}/_zig"
      ]
    }
  }
}
